<mvc:View
	displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="opensap.myapp.controller.App">
	<Carousel>
		<pages>
			<Image src="https://www.asiaone.com/sites/default/files/original_images/Sep2019/20190910_dogs-and-cats-pets_pixabay.jpg" alt="dogs and cats"
				height="400px"/>
			<Image src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/86/Wikipedia_Hello_World_Graphic.svg/2000px-Wikipedia_Hello_World_Graphic.svg.png"
				height="400px"/>
		</pages>
	</Carousel>
	<Button text="Click Me!" press="onShowHello"/>
	<Input
		value="{textPanel>/recipient/name}"
		description="Hello {textPanel>/recipient/name}"
		valueLiveUpdate="true"
		width="60%"/>
</mvc:View>